@model rs1_pet_shop_webapp.ViewModels.Admin.AdminProizvodjacVM
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Uredi proizvodjaca</h1>

<form asp-route="AdminProizvodjacUredi" method="post">
    <input type="hidden" name="Id" value="@Model.Id"/>
    <div class="form-group">
        <label asp-for="Naziv">Naziv</label>
        <input type="text" class="form-control" name="Naziv" id="Naziv" asp-for="Naziv" value="@Model?.Naziv">
        <span asp-validation-for="Naziv" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DrzavaId">Drzava</label>
        <select class="form-control" name="DrzavaId" asp-for="DrzavaId" id="EditProizvodjacSelect">
            @foreach (var drzava in Model.DrzavaList)
            {
                <option value="@drzava.Id">@drzava.Naziv</option>
            }
        </select>
        <span asp-validation-for="DrzavaId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Dodaj</button>
</form>

