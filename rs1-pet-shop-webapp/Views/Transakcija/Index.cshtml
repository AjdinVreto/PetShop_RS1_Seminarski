@model rs1_pet_shop_webapp.ViewModels.Korisnik.Transakcija.TransakcijaIndexVM;

@{
    Layout = "_KorisnikLayout";
}

<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <style>
        .main {
            background: linear-gradient(0.25turn, #3f87a6, #ebf8e1, #f69d3c);
        }

        .searchText {
            font-size: 17px;
        }

        .searchButton {
            font-size: 17px;
        }

        .dropdown-menu {
            background-color: bisque;
        }

        body {
            margin-top: 20px;
        }

        .panel-title {
            display: inline;
            font-weight: bold;
        }

        .pl-ziro {
            padding-left: 0px;
        }

        .form-control {
            font-size: 18px;
        }

        .nav {
            font-size: 16px;
        }

        .btn {
            font-size: 18px;
        }

        .badge {
            font-size: 14px;
        }

        label {
            font-size: 12px;
        }

        .error {
            font-size: 17px;
            font-weight: bold;
            color: red;
        }
    </style>
</head>

<div class="main py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            Izvrsenje transakcije
                        </h3>
                    </div>
                    <div class="panel-body">
                        <form asp-controller="Transakcija" asp-action="UspjesnaKupovina">
                            <div class="form-group">
                                <input asp-for="Ukupno" value="@Model.Ukupno" hidden />
                            </div>
                            <div class="form-group">
                                </label><span asp-validation-for="BrojKartice" class="error"></span>
                                <label for="cardNumber">Broj kartice</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="cardNumber" placeholder="Unesite broj kartice"
                                           required autofocus />
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-7 col-md-7">
                                    <div class="form-group">
                                        <label for="expityMonth">Datum isteka</label>
                                        <div class="col-xs-6 col-lg-6 pl-ziro">
                                            </label><span asp-validation-for="Mjesec" class="error"></span>
                                            <input type="text" class="form-control" id="expityMonth" placeholder="Mjesec" required />
                                        </div>
                                        <div class="col-xs-6 col-lg-6 pl-ziro">
                                            </label><span asp-validation-for="Godina" class="error"></span>
                                            <input type="text" class="form-control" id="expityYear" placeholder="Godina" required />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-5 col-md-5 pull-right">
                                    <div class="form-group">
                                        </label><span asp-validation-for="CVKod" class="error"></span>
                                        <label for="cvCode">CV Kod</label>
                                        <input type="password" class="form-control" id="cvCode" placeholder="CV kod" required />
                                    </div>
                                </div>
                            </div>
                            <ul class="nav nav-pills nav-stacked">
                                <li class="active">
                                    <a href="#"><span class="badge pull-right"><span class="glyphicon"></span>@Model.Ukupno KM</span> Ukupno za platiti :</a>
                                </li>
                            </ul>
                            <br />
                            <div class="form-group">
                                <input type="submit" class="btn btn-success btn-lg btn-block" role="button" value="Plati" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>