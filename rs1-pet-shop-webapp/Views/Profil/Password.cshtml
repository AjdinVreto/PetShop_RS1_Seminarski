@model rs1_pet_shop_webapp.ViewModels.Korisnik.Profil.ProfilPasswordVM;

@{
    Layout = "_KorisnikLayout";
}

<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

    <style>
        .main {
            background: linear-gradient(0.25turn, #3f87a6, #ebf8e1, #f69d3c);
        }

        .searchText {
            font-size: 17px;
        }

        .searchButton {
            font-size: 17px;
        }

        .dropdown-menu {
            background-color: bisque;
        }

        .form {
            font-size: 25px;
        }

        .form-control {
            font-size: 15px;
        }

        .nav {
            font-size: 12px;
        }

        .meni {
            background-color: white;
            font-weight: bold;
        }

        .lbl {
            font-size: 17px;
        }

        .btn {
            font-size: 15px;
            font-weight: bold;
        }
    </style>
</head>


<div class="main py-5">
    <div class="container">
        <div class="col-sm-9">
            <ul class="nav nav-tabs">
                <li class="meni"><a asp-controller="Profil" asp-action="Index">Osnove</a></li>
                <li class="meni"><a asp-controller="Profil" asp-action="Adrese">Adrese</a></li>
                <li class="meni"><a asp-controller="Profil" asp-action="Password">Password</a></li>
                <li class="meni"><a asp-controller="Report" asp-action="Index">Historija narudžbi</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <hr>
                    <form class="form" asp-controller="Profil" asp-action="PromjeniPassword">
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label asp-for="stariPassword"><h4 class="lbl">Trenutni password</h4></label>
                                <input asp-for="stariPassword" type="password" class="form-control" id="trenutnipassword" placeholder="Trenutni password" title="Unesite trenutni password">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-6">
                                <label asp-for="noviPassword"><h4 class="lbl">Unesite novi password</h4></label>
                                <input asp-for="noviPassword" type="password" class="form-control" id="novipassword" placeholder="Novi password" title="Unesite novi password">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-6">
                                <label asp-for="noviPasswordPonovo"><h4 class="lbl">Ponovo unesite novi password</h4></label>
                                <input asp-for="noviPasswordPonovo" type="password" class="form-control" id="nnovipassword" placeholder="Ponovite novi password" title="Unesite novi password">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-12">
                                <br>
                                <input class="btn btn-lg btn-success" type="submit" value="Promjeni password" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
