@model rs1_pet_shop_webapp.ViewModels.Admin.AdminVM
@{
    string title = Model?.Title;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
</head>
<body class="bg-dark">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PET SHOP</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="LogOut">Log out</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid flex-row" style="display:flex;">
        <ul class="nav flex-column col-3 col-sm-3 border-right position-sticky h-100" style="top: 0rem;" id="nav">
            <li class="nav-item flex-column">
                <span class="btn btn-secondary w-100 mt-1" onclick="toggleDropDown(this)">Proizvodi</span>
                <div class="dropdown-menu position-static w-100">
                    <a class="dropdown-item" asp-route="AdminProizvodIndex">Pregled</a>
                    <a class="dropdown-item" asp-route="AdminProizvodDodaj">Dodaj</a>
                </div>
            </li>

            <li class="nav-item flex-column">
                <span class="btn btn-secondary w-100 mt-1" onclick="toggleDropDown(this)">Varijacije</span>
                <div class="dropdown-menu position-static w-100">
                    <a class="dropdown-item" asp-route="AdminVarijacijaIndex">Pregled</a>
                    <a class="dropdown-item" asp-route="AdminVarijacijaDodaj">Dodaj</a>
                </div>
            </li>

            <li class="nav-item flex-column">
                <a class="btn btn-secondary w-100 mt-1" asp-route="AdminKategorijaIndex">Kategorije</a>
            </li>

            <li class="nav-item flex-column">
                <span class="btn btn-secondary w-100 mt-1" onclick="toggleDropDown(this)">Popust kuponi</span>
                <div class="dropdown-menu position-static w-100">
                    <a class="dropdown-item" asp-route="AdminKuponIndex">Pregled</a>
                    <a class="dropdown-item" asp-route="AdminKuponDodaj">Dodaj</a>
                </div>
            </li>

            <li class="nav-item flex-column">
                <span class="btn btn-secondary w-100 mt-1" onclick="toggleDropDown(this)">Poslovnice</span>
                <div class="dropdown-menu position-static w-100">
                    <a class="dropdown-item" asp-route="AdminPoslovnicaIndex">Pregled</a>
                    <a class="dropdown-item" asp-route="AdminPoslovnicaDodaj">Dodaj</a>
                </div>
            </li>

            <li class="nav-item flex-column">
                <span class="btn btn-secondary w-100 mt-1" onclick="toggleDropDown(this)">Proizvodjaci</span>
                <div class="dropdown-menu position-static w-100">
                    <a class="dropdown-item" asp-route="AdminProizvodjacIndex">Pregled</a>
                    <a class="dropdown-item" asp-route="AdminProizvodjacDodaj">Dodaj</a>
                </div>
            </li>

            <li class="nav-item flex-column">
                <a class="btn btn-secondary w-100 mt-1" asp-route="AdminNarudzbaIndex">Narudzbe</a>
            </li>

            <li class="nav-item flex-column">
                <a class="btn btn-secondary w-100 mt-1" asp-route="AdminKorisnikIndex">Korisnici</a>
            </li>

            <li class="nav-item flex-column">
                <a class="btn btn-secondary w-100 mt-1" asp-route="AdminKomentarIndex">Komentari</a>
            </li>

            <li class="nav-item flex-column">
                <span class="btn btn-secondary w-100 mt-1" onclick="toggleDropDown(this)">Novosti</span>
                <div class="dropdown-menu position-static w-100">
                    <a class="dropdown-item" asp-route="AdminNovostiIndex">Pregled</a>
                    <a class="dropdown-item" asp-route="AdminNovostiDodaj">Dodaj</a>
                </div>
            </li>

            <li class="nav-item flex-column">
                <a class="btn btn-secondary w-100 mt-1" asp-route="AdminKontaktIndex">Kontakt forme</a>
            </li>

            <li class="nav-item flex-column">
                <a class="btn btn-secondary w-100 mt-1" asp-route="AdminDrzavaIndex">Drzave</a>
            </li>
        </ul>
        <main role="main" class="pb-3 col-9">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy;
            <script>document.write(new Date().getFullYear());</script> - PET SHOP - <a asp-controller="Home" asp-action="Index">Home</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function toggleDropDown(e) {
            e.nextElementSibling.classList.toggle('show')
        }

        (function () {
            let current = location.pathname;
            $('#nav li a').each(function () {
                let $this = $(this);

                // if the current path is like this link, make it active
                //if ($this.attr('href').indexOf(current) !== -1) {
                if ($this.attr('href') === (current)) {
                    $this.addClass('active');
                    $this.parent()[0].classList.add('show')
                }
            })
        })()

    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
